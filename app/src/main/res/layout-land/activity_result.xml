<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.urja.urjakhurana_pset3.ResultActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="24dp"
        android:textStyle="bold"
        android:id="@+id/nameMovie"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nameMovie"
        android:id="@+id/directorMovie"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/directorMovie"
        android:layout_alignParentLeft="true"
        android:id="@+id/moviePoster"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/directorMovie"
        android:textAlignment="center"
        android:layout_toEndOf="@id/moviePoster"
        android:layout_alignParentEnd="true"
        android:id="@+id/yearMovie"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/yearMovie"
        android:layout_toEndOf="@id/moviePoster"
        android:textAlignment="center"
        android:id="@+id/actorsMovie"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/moviePoster"
        android:layout_below="@id/actorsMovie"
        android:layout_marginTop="3dp"
        android:textAlignment="center"
        android:id="@+id/descMovie"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Add to watchlist"
        android:onClick="addMovie"
        android:visibility="invisible"
        android:id="@+id/addButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Seen"
        android:onClick="removeMovie"
        android:visibility="invisible"
        android:id="@+id/removeButton"/>

</RelativeLayout>
